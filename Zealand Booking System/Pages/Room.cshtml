@*
    Page: Room.cshtml

    Responsibility:
    - Shows all rooms in the system.
    - Lets admins and teachers create, edit, and delete rooms.

    Why this page exists:
    - To give a clear overview of available rooms.
    - To manage rooms in one place instead of multiple pages.
*@
@page
@model Zealand_Booking_System.Pages.RoomModel
@{
    // Read user role from session to control access
    string role = HttpContext.Session.GetString("Role");
    int? accountId = HttpContext.Session.GetInt32("AccountID");

    // Only these roles are allowed to manage rooms
    string[] allowedRoles = new[] { "Administrator", "Teacher" };
}

<section class="my-4 my-md-5">
    <h2 class="zb-section-title mb-3">Rooms</h2>

    @*
        Search and filter form.
        Uses GET so the result can be refreshed or bookmarked.
    *@
    <div class="zb-form-card mb-4">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-6">
                <label for="SearchString" class="form-label">Search rooms</label>
                <input type="text"
                       name="SearchString"
                       id="SearchString"
                       value="@Model.SearchString"
                       placeholder="Search rooms..."
                       class="form-control" />
            </div>

            <div class="col-md-4">
                <label for="RoomTypeFilter" class="form-label">Room type</label>
                <select name="RoomTypeFilter" id="RoomTypeFilter" class="form-select">
                    <option value="">All</option>
                    @foreach (var type in Enum.GetValues(typeof(Zealand_Booking_System_Library.Models.RoomType)))
                    {
                        <option value="@type" selected="@(Model.RoomTypeFilter == type.ToString())">
                            @type
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-2 d-grid">
                <button type="submit" class="btn zb-btn-secondary mt-2">Search</button>
            </div>
        </form>
    </div>

    @*
        Rooms are shown as cards.
        This makes them easier to read than a large table.
    *@
    <div class="row gy-4">
        @foreach (var room in Model.Rooms)
        {
            <div class="col-md-6 col-lg-4">
                <div class="zb-info-card h-100">

                    @if (Model.EditRoomID == room.RoomID)
                    {
                        @*
                            Edit mode for a single room.
                            Only one room can be edited at a time.
                        *@
                        <form method="post" asp-page-handler="SaveEdit">
                            <input asp-for="EditRoom.RoomID" type="hidden" />

                            <div class="mb-2">
                                <label class="form-label">Room</label>
                                <input asp-for="EditRoom.RoomName" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Location</label>
                                <input asp-for="EditRoom.RoomLocation" class="form-control" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Description</label>
                                <textarea asp-for="EditRoom.RoomDescription" class="form-control"></textarea>
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Room type</label>
                                <select asp-for="EditRoom.RoomType"
                                        asp-items="Html.GetEnumSelectList<Zealand_Booking_System_Library.Models.RoomType>()"
                                        class="form-select">
                                </select>
                            </div>

                            <div class="form-check mb-2">
                                <input asp-for="EditRoom.HasSmartBoard"
                                       class="form-check-input"
                                       type="checkbox" />
                                <label asp-for="EditRoom.HasSmartBoard"
                                       class="form-check-label">
                                    Has smartboard
                                </label>
                            </div>

                            <button type="submit" class="btn btn-success btn-sm">Save</button>
                            <a href="/Room" class="btn zb-btn-secondary btn-sm">Cancel</a>
                        </form>
                    }
                    else
                    {
                        @*
                            Normal view mode.
                            Shows room details and available actions.
                        *@
                        <h5>@room.RoomName</h5>
                        <p class="small">
                            Location: @room.RoomLocation <br />
                            Type: @room.RoomType <br />
                            Smartboard: @(room.HasSmartBoard ? "Yes" : "No") <br />
                            @room.RoomDescription
                        </p>

                        @*
                            Only admins and teachers can edit or delete rooms.
                        *@
                        @if (allowedRoles.Contains(role))
                        {
                            <form method="post"
                                  asp-page-handler="Delete"
                                  class="d-inline"
                                  onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>

                            <form method="post" asp-page-handler="StartEdit" class="d-inline">
                                <input type="hidden" name="roomID" value="@room.RoomID" />
                                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                            </form>
                        }

                        @*
                            Booking is available for all users.
                        *@
                        <a asp-page="/CreateBooking"
                           class="btn zb-btn-primary btn-sm mt-1">
                            Book room
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</section>
